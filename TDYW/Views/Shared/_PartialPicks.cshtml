@using TDYW.Models
@model IEnumerable<Pick>


<div class="list-group">
    @*or li*@
    @foreach (Pick p in Model)
    {
        <div class="list-group-item media">
            <div class="media-left">
                <img class="media-object" data-src="@p.Person.ImageUrl" />
            </div>
            <div class="media-body bg-primary">
                <div class="list-group-item-heading media-heading hidden-overflow">
                    @p.Person.Name
                </div>
                <div class="hidden-overflow">
                    @p.Person.Description
                </div>
                <div>
                    @if (p.Player.Pool.PreGame)
                    {
                        <button class="btn btn-xs btn-warning" onclick="alert('trash ' + @p.Id)">
                            <span class="glyphicon glyphicon-trash"></span>
                        </button>
                        @*<input type="button" value="Create" onclick="location.href='@Url.Action("Delete", "Pick")'" />*@
                    }
                    <button onclick="alert('trash ' + @p.Id )">
                        <img src="~/images/wiki_icon_24.png" />
                    </button>
                </div>
            </div>
        </div>

    }

</div>

